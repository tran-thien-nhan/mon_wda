@model TS2210004.Models.Account

@{
    ViewData["Title"] = "Registration";
}

<h1 class="text-center">Registration</h1>

@if (ViewBag.SignUpSuccess != null)
{
    <div class="alert alert-success">
        @ViewBag.SignUpSuccess
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="card mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <h4 class="card-title">Account</h4>
        <hr />

        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AccountNo" class="control-label"></label>
                <input asp-for="AccountNo" class="form-control" />
                <span asp-validation-for="AccountNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PinCode" class="control-label"></label>
                <input asp-for="PinCode" class="form-control" />
                <span asp-validation-for="PinCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Role</label>
                <div class="form-check">
                    <input type="radio" asp-for="Role" value="true" class="form-check-input" id="adminRadio" />
                    <label class="form-check-label" for="adminRadio">Admin</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Role" value="false" class="form-check-input" id="userRadio" />
                    <label class="form-check-label" for="userRadio">User</label>
                </div>
            </div>

            <div class="form-group d-flex">
                <input type="submit" value="Sign Up" class="btn btn-primary btn-block" />
                <button onclick="goBack()" class="btn btn-warning btn-block mx-2">Go Back</button>
            </div>
        </form>

    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
