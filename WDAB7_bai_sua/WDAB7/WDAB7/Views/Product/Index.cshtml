@model IEnumerable<ProductDTO>
<h2>Product List</h2>
<a class="btn btn-primary" asp-action="Create">Create a new Product</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td> 
                <td>@item.Quantity</td>
                <td>@Html.Raw(@item.Description)</td>
                <td><a asp-action="Delete"
                   class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Edit"
                       class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>