@model IEnumerable<homework3.Models.Item>

@{
    ViewData["Title"] = "Listitem";
}

<h1>Listitem</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Item Code
            </th>
            <th>
                Item Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/images/@item.Image" width="100px" class="img-fluid" alt="Product Image" />
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-itemcode="@item.ItemCode">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
