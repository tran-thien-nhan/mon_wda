@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>

@if (ViewBag.error != null)
{
    <h4>@ViewBag.error</h4>
}
<form asp-action="Login">
    <table>
        <tr>
            <td>Username</td>
            <td><input name="username" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input name="password" type="password" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form>